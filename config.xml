<?xml version="1.0" encoding="utf-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets" xmlns:gap = "http://phonegap.com/ns/1.0" id = "com.opt.barcode" version = "1.1.4">
	<name>BarCodeTest</name>
	<description>OPT APP</description>
	<author>ATIF</author>
	<!-- Customize your app and platform with the preference element. -->
	
	<preference name="phonegap-version" value="3.6.3" />
	<preference name="orientation" value="default" />
	<preference name="target-device" value="universal" />
	
	<!-- Define app icon MAIN ROOT Platform. -->
	
	<icon src="icon.png" />
	
	<!-- Define app icon ANDROID Platform. -->
	
	<icon src="Opt-114.png" gap:platform="android" gap:density="ldpi" />
	<icon src="Opt-114.png" gap:platform="android" gap:density="mdpi" />
	<icon src="Opt-114.png" gap:platform="android" gap:density="hdpi" />
	<icon src="Opt-144.png" gap:platform="android" gap:density="xhdpi" />
	
	<!-- Define app icon IOS Platform. -->
	
	
	
	<icon src="Opt-57.png" gap:platform="ios" width="57" height="57" />
	<icon src="Opt-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="Opt-114.png" gap:platform="ios" width="114" height="114" />
	<icon src="Opt-120.png" gap:platform="ios" width="120" height="120" />
	<icon src="Opt-144.png" gap:platform="ios" width="144" height="144" />
	
	<!-- Define app splash screen for ANDROID platform. -->
	
<gap:splash src="global-flat-splash.png" gap:platform="android" gap:density="ldpi" />
<gap:splash src="global-flat-splash.png" gap:platform="android" gap:density="mdpi" />
<gap:splash src="global-flat-splash.png" gap:platform="android" gap:density="hdpi" />
<gap:splash src="global-flat-splash.png" gap:platform="android" gap:density="xhdpi" />
	
	<!-- Define app splash screen for IOS platform. -->
	
<gap:splash src="spl320x480.png" width="320" height="480" />
<gap:splash src="spl640x960.png" width="640" height="960" />
<gap:splash src="spl640x1136.png" width="640" height="1136" />
<gap:splash src="spl1024x768.png" width="1024" height="768" />
<gap:splash src="spl768x1024.png" width="768" height="1024" />
<gap:splash src="spl2048x1496.png" width="2048" height="1496" />
<gap:splash src="spl1536x2008.png" width="1536" height="2008" />

<gap:config-file platform="ios" parent="CFBundleShortVersionString">
	<string>114</string>
</gap:config-file>
	
	<accesss origin="*" />
</widget>
